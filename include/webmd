#!/usr/bin/env bash
mdname="KryPtoN-vince-${tanggal}.md"
tanggalfile=$(TZ=Asia/Jakarta date "+%Y/%m/%d")
filesize=$(du -h /root/AnyKernel/$ZIP_NAME)
checksum="md5sum $ZIP_NAME"

# Membuat file .md
function md() {
     echo "---" > ${mdname}
     echo "name: $ZIP_NAME" >> ${mdname}
     echo "date: $tanggalfile" >> ${mdname}
     echo "size: $filesize" >> ${mdname}
     echo "version: " >> ${mdname}
     echo "md5: $checksum" >> ${mdname}
     echo "changelog: " >> ${mdname}
     echo "categories: " >> ${mdname}
     echo "layout: waitting" >> ${mdname}
     echo "link: " >> ${mdname}
     echo "---" >> ${mdname}
}

# Kirim File .md
function sendmd() {
	curl -F document=@${tanggalweb}.md "https://api.telegram.org/bot$token/sendDocument" \
			-F chat_id="$chat_id" \
			-F "disable_web_page_preview=true" \
			-F "parse_mode=html"
}

md
sendmd
